<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#51556E"
    >


    <TextView
        android:id="@+id/header_key"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_weight="0.4"
        android:text="clé"
        android:textColor="#C5CEFF"
        android:textSize="16dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/header_create_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.25"
        android:text="créée le"
        android:textColor="#C5CEFF"
        android:textSize="16dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/header_expire_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.25"
        android:text="expire le"
        android:textColor="#C5CEFF"
        android:textSize="16dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/header_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_marginLeft="20dp"
        android:layout_weight="0.1"

        />
</LinearLayout>